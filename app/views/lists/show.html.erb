<h2><%= @list.name %></h2>
<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li><%= "#{Movie.find(bookmark.movie_id).title} - #{bookmark.comment}" %><%= link_to "Delete",
  bookmark_path(bookmark),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%></li>
  <% end %>
</ul>
<%= link_to "Return to Lists", lists_path %>

<%= link_to "Add Bookmark", new_list_bookmark_path(params[:id]) %>
